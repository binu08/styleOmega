<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/product_items_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/product_items_product_image"
            android:layout_width="150dp"
            android:layout_height="175dp"
            android:layout_below="@+id/product_items_product_name"
            android:layout_centerInParent="true"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"></ImageView>

        <TextView
            android:id="@+id/product_items_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_items_product_image"
            android:text="Price"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/product_items_product_description"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/product_items_product_price"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="14dp"
            android:text="Product Description"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13dp"
            android:textStyle="normal"></TextView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>